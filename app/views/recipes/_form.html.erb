<%= form_for @recipe do |f| %>
    <%= f.label :"Recipe title:" %> 
    <%= f.text_field :title %> <br> <br>

    <%= f.label :"List of ingredients:" %> 
    <%= f.text_field :ingredients %> <br> <br>

    <%= f.label :"Recipe instructions:" %> <br>
    <%= f.text_area :instructions %> <br>

    <%= f.label :"Review:" %> <br>
    <%= f.fields_for :review do |r| %> 
        <%= r.label :"Score 1 (lowest) to 5 (highest):" %> <br>
        <%= r.number_field :stars %> <br> <br>

        <%= r.label :"comment:" %> <br>
        <%= r.text_area :comment %> <br>

        <% end %>

    <%= f.submit %>

<% end %>