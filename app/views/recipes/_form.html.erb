<%= form_for @recipe do |f| %>
    <%= f.label :"Recipe title:" %> 
    <%= f.collection_select :recipe_id, Recipe.all, :id, :title, prompt: true %>
    <%= f.text_field :title %> <br> <br>

    <%= f.label :"List of ingredients:" %> 
    <%= f.text_field :ingredients %> <br> <br>

    <%= f.label :"Recipe instructions:" %> <br>
    <%= f.text_area :instructions %> <br>

    <%= f.label :review %> <br>
        <%= f.fields_for :review do |r| %> 
        <%= r.label :"Score 0 (lowest) to 5 (highest):" %> <br>
        <%= r.number_field :stars,  min: 0, max: 5, step: 1%> <br> <br>

        <%= r.label :"comment:" %> <br>
        <%= r.text_area :comment %> <br>

        <% end %>

    <%= f.submit %>

<% end %>